    ViewBag.Title = "PropertyDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PropertyDetails</h2>

<div class="row table-bordered">

    <div class="col-12 col-md-4 col-xl-4 padding-top10">
